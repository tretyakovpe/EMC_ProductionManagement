<!DOCTYPE html>
<html lang="ru" data-bs-theme="dark">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Прогресс производства</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="~/css/site.css">
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/lib/microsoft-signalr/dist/browser/signalr.min.js"></script>
</head>
<body>
	<nav class="navbar px-5">
		<button type="button" class="btn btn-outline-info" id="testButton">Тест</button>
		<span class="navbar-brand">Прогресс производства</span>
		<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarCollapse">
			<ul class="navbar-nav">
				<li class="nav-item">
					@Html.ActionLink("Линии", "Index", "Lines", null, new { @class = "nav-link" })
				</li>
				<li class="nav-item">
					@Html.ActionLink("Материалы", "Index", "Materials", null, new { @class = "nav-link" })
				</li>
				<li class="nav-item">
					@Html.ActionLink("Операторы", "Index", "Operators", null, new { @class = "nav-link" })
				</li>
				<li class="nav-item">
					@Html.ActionLink("Смена", "Index", "Shifts", null, new { @class = "nav-link" })
				</li>
				<li class="nav-item">
					@Html.ActionLink("Список NOK", "Index", "PartNok", null, new { @class = "nav-link" })
				</li>
			</ul>
		</div>
	</nav>
	<hr />
	<div class="container-fluid">
		<main role="main" class="row justify-content-center">
			@RenderBody()
		</main>
	</div>
	<script>
		document.getElementById('testButton').addEventListener('click', function () {
			$.ajax({
				method: 'GET',
				url: '/Progress/Test', // Ваш endpoint API
				success: function(data) {
					alert('Запрос успешно выполнен!\nРезультат: ' + JSON.stringify(data));
				},
				error: function(xhr, status, error) {
					console.error('Ошибка:', xhr.responseText || error);
					alert('Ошибка при выполнении запроса!');
				}
			});
		});
	</script>


</body>
</html>
